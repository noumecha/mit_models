{% if content %}
<section {{ attributes.addClass('mitor-section-title')}}>
    <div class="container">
        <div class="row align-items-center">
            <div class="mitor-card__body col-lg-4 pt-3 pt-lg-0">
                {% if content.service_small_title %}
                <{{settings.region_tag_service_small_title}} {{ region_attributes.service_small_title.addClass('mc-small')}}>
                    {{ content.service_small_title }}
                </{{settings.region_tag_service_small_title}}>
                {% endif %}
                {% if content.service_title %}
                <{{settings.region_tag_service_title}} {{ region_attributes.service_title.addClass('mc-title')}}>
                    {{ content.service_title }}
                </{{settings.region_tag_service_title}}>
                {% endif %}
                {% if content.service_description %}
                <div {{ region_attributes.service_description.addClass('mc-description')}}>
                    {{ content.service_description }}
                </div>
                {% endif %}
                {% if content.service_link %}
                    {% for item in content.service_link|array_elements(region_attributes.service_link.addClass('')) %}
                        {{ item }} 
                    {% endfor %}
                {% endif %}
            </div>
            <div class="col-lg-8 pl-md-5">
                <div class="row ml-auto justify-content-end">
                    {% if content.service_container %}
                        {% for item in content.service_container|array_elements(region_attributes.service_container.addClass('')) %}
                            {{ item }} 
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</Section>
{% endif %}